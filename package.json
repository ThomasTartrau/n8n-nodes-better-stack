{
	"name": "n8n-nodes-better-stack",
	"version": "1.0.0",
	"description": "n8n community nodes for Better Stack Uptime API integration",
	"keywords": [
		"n8n-community-node-package",
		"better-stack",
		"uptime",
		"monitoring",
		"incidents",
		"status-page",
		"heartbeat"
	],
	"license": "MIT",
	"homepage": "https://github.com/ThomasTartrau/n8n-nodes-better-stack",
	"author": {
		"name": "Thomas Tartrau",
		"email": "thomas@tartrau.fr"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ThomasTartrau/n8n-nodes-better-stack.git"
	},
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc && npm run copy:icons",
		"copy:icons": "cp -r icons dist/",
		"dev": "tsc --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"check": "biome format .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"prepublishOnly": "npm run build"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"credentials": [
			"dist/credentials/BetterStackApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/BetterStackMonitor/BetterStackMonitor.node.js",
			"dist/nodes/BetterStackHeartbeat/BetterStackHeartbeat.node.js",
			"dist/nodes/BetterStackIncident/BetterStackIncident.node.js",
			"dist/nodes/BetterStackStatusPage/BetterStackStatusPage.node.js",
			"dist/nodes/BetterStackMetadata/BetterStackMetadata.node.js",
			"dist/nodes/BetterStackTrigger/BetterStackTrigger.node.js",
			"dist/nodes/BetterStackMonitorGroup/BetterStackMonitorGroup.node.js",
			"dist/nodes/BetterStackHeartbeatGroup/BetterStackHeartbeatGroup.node.js"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/node": "^25.0.3",
		"@vitest/coverage-v8": "^4.0.16",
		"n8n-workflow": "^2.2.2",
		"semantic-release": "^25.0.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"n8n-workflow": "^2.2.2"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"overrides": {
		"form-data": "^4.0.4"
	}
}
